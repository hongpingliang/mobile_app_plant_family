            android:name=".ActivityMainPlantFamily"
            android:icon="@drawable/app_icon"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.bim.key.ActivityQuestion"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.bim.key.ActivityQuizList"
            android:label="@string/main_quiz_review" >
        </activity>
        <activity android:name="com.bim.key.ActivityItemList" >
        </activity>
        <activity
            android:name="com.bim.key.ActivityItemDetail"
            android:icon="@drawable/app_icon" >
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />

                <action android:name="android.intent.action.VIEW" />

                <data
                    android:host="ActivityItemDetail"
                    android:scheme="com.bim.key.plantfamily198" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.bim.key.ActivityAttributeDetail"
            android:icon="@drawable/app_icon" >
