                <category android:name="android.intent.category.DEFAULT" />

                <action android:name="android.intent.action.VIEW" />

                <data
                    android:host="ActivityAttributeDetail"
                    android:scheme="com.bim.key.plantfamily198" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.bim.key.ActivityPreference"
            android:label="@string/app_name_setting"
            android:theme="@android:style/Theme.Light" >
        </activity>
        <activity
            android:name="com.bim.key.ActivityDataLoader"
            android:theme="@style/Theme.Transparent" >
        </activity>
        <activity
            android:name="com.bim.key.ActivityKey"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.bim.key.ActivityAttributeSelect"
            android:theme="@style/Theme.Transparent" >
        </activity>
       <activity android:name="com.bim.key.ActivityViewImage" >
        </activity>        
    </application>

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true" />

</manifest>